<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="org.hogwartsencriptado.MainController"
            prefWidth="1000" prefHeight="700"
            minWidth="900" minHeight="600">

    <!-- Menú superior -->
    <top>
        <MenuBar minHeight="25" prefHeight="30">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="closeMenuItem" text="Close" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem fx:id="manualMenuItem" text="Manual" />
                        <MenuItem fx:id="ayudaMenuItem" text="Ayuda" />
                    </items>
                </Menu>
                <Menu text="Sobre Nosotros">
                    <items>
                        <MenuItem fx:id="aboutMenuItem" text="Acerca de..." />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Menú lateral -->
    <left>
        <VBox spacing="15" padding="15" alignment="TOP_CENTER"
              style="-fx-background-color: #2c3e50;"
              prefWidth="200" minWidth="180" maxWidth="220">

            <Label text="Cifrados"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- Botones que llenan horizontalmente -->
            <Button fx:id="aesButton" text="AES"
                    maxWidth="Infinity" minHeight="40"
                    onAction="#seleccionarAES"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" />

            <Button fx:id="vigenereButton" text="Vigenère"
                    maxWidth="Infinity" minHeight="40"
                    onAction="#seleccionarVigenere"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" />

            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <GridPane hgap="10" vgap="10" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Columnas -->
            <columnConstraints>
                <ColumnConstraints percentWidth="50" minWidth="350" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="50" minWidth="350" hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Filas -->
            <rowConstraints>
                <RowConstraints percentHeight="15.0" minHeight="100"/>
                <RowConstraints percentHeight="70.0" minHeight="350" vgrow="ALWAYS"/>
                <RowConstraints percentHeight="15.0" minHeight="100"/>
            </rowConstraints>

            <!-- Clave -->
            <VBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="0">
                <Label text="Clave:" />
                <TextField fx:id="claveTextField" promptText="Escribe la clave aquí" />
                <Button fx:id="cargarClaveButton" maxWidth="Infinity" text="Cargar archivo" onAction="#cargarClave"/>
            </VBox>

            <!-- Área de entrada -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" VBox.vgrow="ALWAYS">
                <Label text="Entrada (texto o archivo)" />
                <TextArea fx:id="entradaTextArea" wrapText="true" VBox.vgrow="ALWAYS" />
                <Button fx:id="cargarEntradaButton" maxWidth="Infinity" text="Cargar archivo" onAction="#cargarEntrada"/>
            </VBox>

            <!-- Área de resultado -->
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1" VBox.vgrow="ALWAYS">
                <Label text="Resultado (texto cifrado/descifrado)" />
                <TextArea fx:id="resultadoTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                <HBox spacing="5">
                    <TextField fx:id="rutaGuardarTextField" promptText="Ruta del archivo..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="guardarArchivoButton" text="Guardar archivo" onAction="#guardarArchivo"/>
                </HBox>
            </VBox>

            <!-- Botones Cifrar / Descifrar -->
            <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                <Button fx:id="cifrarButton" text="Cifrar" maxWidth="Infinity" minHeight="40" onAction="#cifrar"/>
                <Button fx:id="descifrarButton" text="Descifrar" maxWidth="Infinity" minHeight="40" onAction="#descifrar"/>
            </VBox>

        </GridPane>
    </center>
</BorderPane>
