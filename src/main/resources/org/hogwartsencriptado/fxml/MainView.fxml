<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="rootPane" minHeight="546.0" minWidth="800" prefHeight="560.0" prefWidth="900" spacing="10" stylesheets="@../estilo/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hogwartsencriptado.MainController">

    <!-- Menú superior -->
    <MenuBar minHeight="25" prefHeight="30" styleClass="menu-bar">
        <menus>
            <Menu text="Archivo">
                <items>
                    <MenuItem fx:id="closeMenuItem" text="Cerrar" />
                </items>
            </Menu>
            <Menu text="Ayuda">
                <items>
                    <MenuItem fx:id="manualMenuItem" text="Manual" />
                    <MenuItem fx:id="ayudaMenuItem" text="Ayuda" />
                </items>
            </Menu>
            <Menu text="Sobre Nosotros">
                <items>
                    <MenuItem fx:id="aboutMenuItem" text="Acerca de..." />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- Selección de algoritmo -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label minHeight="20" text="Algoritmo:" />
        <RadioButton fx:id="aesRadioButton" selected="true" text="AES" />
        <RadioButton fx:id="vigenereRadioButton" text="Vigenère" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>

    <!-- Clave -->
    <VBox spacing="5">
        <Label minHeight="20" text="Clave:" />
        <TextField fx:id="claveTextField" minHeight="30" promptText="Escribe la clave aquí" />
        <Button fx:id="cargarClaveButton" maxWidth="Infinity" minHeight="35" onAction="#cargarClave" text="Cargar archivo" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </VBox>

    <!-- Área principal - HBox responsivo -->
    <HBox minHeight="200.0" prefHeight="100.0" prefWidth="200.0" spacing="10" VBox.vgrow="ALWAYS">
        <children>
            <!-- Entrada -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label minHeight="20" text="Entrada (texto o archivo)" />
                <TextArea fx:id="entradaTextArea" minHeight="200.0" minWidth="200" wrapText="true" VBox.vgrow="ALWAYS" />
                <Button fx:id="cargarEntradaButton" maxWidth="Infinity" minHeight="35" onAction="#cargarEntrada" text="Cargar archivo" />
            </VBox>

            <!-- Resultado -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label minHeight="20" text="Resultado (texto cifrado/descifrado)" />
                <TextArea fx:id="resultadoTextArea" editable="false" minHeight="200.0" minWidth="200" wrapText="true" VBox.vgrow="ALWAYS" />
                <HBox spacing="5">
                    <TextField fx:id="rutaGuardarTextField" minHeight="30" promptText="Ruta del archivo..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="guardarArchivoButton" minHeight="35" onAction="#guardarArchivo" text="Guardar archivo" />
                </HBox>
            </VBox>
        </children>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>

    <!-- Botones Cifrar / Descifrar -->
    <VBox spacing="10">
        <Button fx:id="cifrarButton" maxWidth="Infinity" minHeight="45" onAction="#cifrar" text="Cifrar" />
        <Button fx:id="descifrarButton" maxWidth="Infinity" minHeight="45" onAction="#descifrar" text="Descifrar">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Button>
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
    </VBox>

</VBox>
