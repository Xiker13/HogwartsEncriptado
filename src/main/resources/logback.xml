<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========= APPENDER: CONSOLA ========= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>AVISO CONSOLA --> %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========= APPENDER: ARCHIVO FIJO ========= -->
    <appender name="FILE_GIGANTE" class="ch.qos.logback.core.FileAppender">
        <file>registroDeApp.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========= APPENDER: ARCHIVO ROTATIVO POR TAMAÑO ========= -->
    <appender name="FILE_ROLLER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>registroDeApp1MB.log</file>

        <!-- Política de rotación: crea nuevos archivos de 1 MB -->
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>registroDeApp1MB.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========= LOGGER DE TU PAQUETE ========= -->
    <logger name="org.hogwartsencriptado" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_GIGANTE"/>
        <appender-ref ref="FILE_ROLLER"/>
    </logger>

    <!-- ========= ROOT LOGGER ========= -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_GIGANTE"/>
        <appender-ref ref="FILE_ROLLER"/>
    </root>

</configuration>
