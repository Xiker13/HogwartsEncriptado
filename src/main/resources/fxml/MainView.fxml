<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="rootPane" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="900.0" spacing="10" stylesheets="@../estilo/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hogwartsencriptado.MainController">

    <!-- Menú superior -->
    <MenuBar minHeight="25" prefHeight="30" styleClass="menu-bar">
        <menus>
            <Menu text="%menu.archivo">
                <items>
                    <MenuItem fx:id="closeMenuItem" text="%menuitem.cerrar" />
                </items>
            </Menu>
            <Menu text="%menu.ayuda">
                <items>
                    <MenuItem fx:id="manualMenuItem" text="%menuitem.manual" />
                    <MenuItem fx:id="ayudaMenuItem" text="%menuitem.ayuda" />
                </items>
            </Menu>
            <Menu text="%menu.sobre">
                <items>
                    <MenuItem fx:id="aboutMenuItem" text="%menuitem.about" />
                </items>
            </Menu>
            <Menu fx:id="menuIdioma" text="%menu.idioma">
                <items>
                    <MenuItem fx:id="esMenuItem" text="%menuitem.es" />
                    <MenuItem fx:id="enMenuItem" text="%menuitem.en" />
                </items>
            </Menu>
            <Menu fx:id="temaMenu" text="%menu.tema">
                <items>
                    <MenuItem fx:id="temaClasicoMenuItem" text="%menuitem.clasico" />
                    <MenuItem fx:id="temaBibliotecaMenuItem" text="%menuitem.biblioteca" />
                    <MenuItem fx:id="temaNocturnaMenuItem" text="%menuitem.nocturna" />
                </items>
            </Menu>


        </menus>
    </MenuBar>


    <!-- Selección de algoritmo -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label minHeight="20" text="%label.algorithm" />
        <RadioButton fx:id="aesRadioButton" selected="true" text="AES" />
        <RadioButton fx:id="vigenereRadioButton" text="Vigenère" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </HBox>

    <!-- Clave -->
    <VBox spacing="5">
        <Label minHeight="20" text="%label.key" />
        <TextArea fx:id="claveTextField" minHeight="35.0" prefHeight="59.0" prefWidth="874.0" promptText="%textfield.key" wrapText="true" VBox.vgrow="NEVER" />
        <Button fx:id="cargarClaveButton" maxWidth="Infinity" minHeight="35" onAction="#cargarClave" text="%button.loadKey" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </VBox>

    <!-- Área principal -->
    <HBox alignment="CENTER" minHeight="220.0" spacing="10" VBox.vgrow="ALWAYS">
        <!-- Entrada -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label minHeight="20" text="%label.input" />
            <TextArea fx:id="entradaTextArea" minHeight="200.0" minWidth="200" wrapText="true" VBox.vgrow="ALWAYS" />
            <Button fx:id="cargarEntradaButton" maxWidth="Infinity" minHeight="35" onAction="#cargarEntrada" text="%button.loadInput" />
        </VBox>

        <!-- Resultado -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label minHeight="20" text="%label.result" />
            <TextArea fx:id="resultadoTextArea" editable="false" minHeight="200.0" minWidth="200" wrapText="true" VBox.vgrow="ALWAYS" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="%label.saveType" />
                <RadioButton fx:id="radioTexto" selected="true" text="%radio.text">
                    <toggleGroup>
                        <ToggleGroup fx:id="saveTypeGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="radioImagen" text="%radio.image" toggleGroup="$saveTypeGroup" />
                <Button fx:id="guardarArchivoButton" minHeight="35" maxWidth="Infinity" onAction="#guardarArchivo" text="%button.save" HBox.hgrow="ALWAYS" />
            </HBox>

        </VBox>

      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>

    <!-- Botones Cifrar / Descifrar -->
    <VBox prefWidth="894.0" spacing="10">
        <Button fx:id="cifrarButton" maxWidth="Infinity" minHeight="45" onAction="#cifrar" text="%button.encrypt" />
        <Button fx:id="descifrarButton" maxWidth="Infinity" minHeight="45" onAction="#descifrar" text="%button.decrypt">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Button>
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
    </VBox>

</VBox>
